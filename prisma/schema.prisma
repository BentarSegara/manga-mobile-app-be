generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  histories History[]
  favorites Favorite[]
}

model History {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String
  chapter   String
  progress  String
  image     String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  updatedAt DateTime @default(now())
  createdAt DateTime @default(now())
}

model Favorite {
  id     Int    @id @default(autoincrement())
  title  String
  slug   String
  genre  String
  image  String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}
